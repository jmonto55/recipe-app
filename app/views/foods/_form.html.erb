    </div>
    <br>

    <div>
    <%= f.text_field :price, placeholder: "Price", class: "shadow-sm border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"  %>
  </div>
    <br>
  <div>
    <%= f.number_field :quantity, placeholder: "Quantity", class: "shadow-sm border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"  %>
  </div>
    <br>

