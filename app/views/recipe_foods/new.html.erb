<section class='food-form-container'>
<h1>Add ingredient to Recipe</h1>
<%= form_with url: recipe_recipe_foods_path(recipe_id: @recipe.id), scope: :recipe_food do |form| %>
    <div class="form-div" >
    <div class='form-item'>
    <%= form.label :quantity, class:"form-label" %><br>
    <%= form.number_field :quantity , class:"input-form", required: true, placeholder: '1',  min: 1%><br>
  </div>

  <div class='form-item'>
    <%= form.label :food, class: 'form-label' %><br>
    <%= form.select :food_id, current_user.foods.map {|food| [food.name, food.id]},{ include_blank: true} , class:"input-form"%><br>
    </div>
  <div class='form-item'>
    <div>
    <%= form.submit "Add", class:"btn btn-primary form-control" %>
    </div>
    </div>
  <%end%>
<section>
